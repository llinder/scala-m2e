<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="org.scala-ide.m2e.feature"
      label="Maven Integration for Scala IDE"
      version="0.1.1.qualifier"
      provider-name="Dtornkaew Software, LLC.">

   <description url="http://github.com/llinder/m2e-scala/">
      Ease m2eclipse + scala-ide (eclipse plugin) integration
   </description>

   <url>
      <update label="scala-m2e" url="http://scala-ide-m2e/juno/update-site"/>
   </url>

   <requires>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.m2e.core"/>
      <import plugin="org.eclipse.m2e.maven.runtime"/>
      <import plugin="org.eclipse.m2e.jdt"/>
      <import plugin="org.eclipse.jdt.launching"/>
      <import plugin="org.scala-ide.scala.library"/>
      <import plugin="org.scala-ide.sdt.core"/>
      <import plugin="org.slf4j.api"/>
   </requires>

   <plugin
         id="org.scala-ide.m2e.core"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
